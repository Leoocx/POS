<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.system.pos.pos.controller.EstoqueController"
      spacing="15" padding="20">

    <!-- Título -->
    <Label text="Controle de Estoque" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Painel de movimentação -->
    <TitledPane text="Registrar Movimentação">
        <VBox spacing="10" padding="10">

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Produto:"/>
                <ComboBox fx:id="comboProduto" prefWidth="250"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Quantidade:"/>
                <TextField fx:id="campoQuantidade" prefWidth="100"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Observação:"/>
                <TextField fx:id="campoObservacao" prefWidth="300"/>
            </HBox>

            <HBox spacing="10">
                <Button text="Registrar Entrada" fx:id="btnEntrada" onAction="#registrarEntrada" prefWidth="150"/>
                <Button text="Registrar Saída" fx:id="btnSaida" onAction="#registrarSaida" prefWidth="150"/>
            </HBox>
        </VBox>
    </TitledPane>

    <!-- Histórico -->
    <TitledPane text="Histórico de Movimentações" expanded="true">
        <VBox spacing="5" padding="10">
            <TableView fx:id="tabelaHistorico" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colDataHora" text="Data/Hora" prefWidth="150"/>
                    <TableColumn fx:id="colProduto" text="Produto" prefWidth="150"/>
                    <TableColumn fx:id="colTipo" text="Tipo" prefWidth="100"/>
                    <TableColumn fx:id="colQuantidade" text="Quantidade" prefWidth="100"/>
                    <TableColumn fx:id="colObservacao" text="Observação" prefWidth="200"/>
                </columns>
            </TableView>
        </VBox>
    </TitledPane>

</VBox>
